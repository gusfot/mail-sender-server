	             </beans:property>
	</beans:bean>
	 -->


	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/resources/**/*" />
			<mvc:exclude-mapping path="/WEB-INF/**/*" />
			<mvc:exclude-mapping path="/login" />
			<mvc:exclude-mapping path="/" />
			<mvc:exclude-mapping path="/rest/user/login" />
			<mvc:exclude-mapping path="/rest/admin/login" />
			<mvc:exclude-mapping path="/rest/user/logout" />
			<mvc:exclude-mapping path="/layout/test" />
			<mvc:exclude-mapping path="/layout/smartEditor" />
			<mvc:exclude-mapping path="/article/board" />
			<mvc:exclude-mapping path="/layout/board" />
			<mvc:exclude-mapping path="/rest/article/regist" />
			<mvc:exclude-mapping path="/layout/bonbu" />
			
			<beans:bean class="org.ohjic.flower.interceptor.LoginInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>	
	 		
