<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<context:component-scan base-package="org.ohjic.libs.sender.sms" />
	<context:property-placeholder location="classpath:properties/database-libs.properties" ignore-unresolvable="true" />

	<bean id="dataSourceForFax" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://192.168.0.41:3306/fax"/>
		<property name="username" value="fax"/>
		<property name="password" value="2016vortm#gksek"/>
		<property name="validationQuery" value="SELECT 1" />
		<property name="testOnBorrow" value="true" />
	</bean>

	<!-- MyBatis SessionFactory/Session -->
	<bean id="sqlSessionFactoryForFax" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourceForFax" />
		<property name="configLocation" value="classpath:mybatis-context-fax.xml" />
	</bean>

	<bean id="sqlSessionForFax" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
		<constructor-arg index="0" ref="sqlSessionFactoryForFax" />
	</bean>

	<bean id="faxDAO" class="org.ohjic.libs.fax.FaxDAO">
		<constructor-arg name="sqlSession" ref="sqlSessionForFax" />
	</bean>

	<bean id="faxSender" class="org.ohjic.libs.fax.FaxSender">
		<constructor-arg name="faxDAO" ref="faxDAO" />
	</bean>
</beans>